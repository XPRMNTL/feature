
sans-font = 'Maven Pro', sans-serif
ser-font = 'Josefin Slab', serif

body > header
  // background #A55871 url('../img/headerBG.png') no-repeat top left
  background #A55871
  color #FFF
  overflow auto

  a, a:hover
    color #FFF

  .brand
    display inline-block
    border-width 0 1px
    border-style solid
    border-color #D8D8D8
    height 69px
    margin 31px 0 25px 100px
    padding 5px 11px 5px 25px
    position relative

    &:before
      content ''
      display block
      background url('../img/logo.png')
      height 80px
      width 80px
      position absolute
      left -100px
      top -6px

    &:hover
      text-decoration none

    h1, .h1, h2, .h2
      margin 0
      padding 0
      font-family ser-font
      text-transform uppercase

    h1
      letter-spacing 18px
      line-height 43px
    h2
      font-size 12px
      letter-spacing 5.04px
      line-height 15px

  // h1
  //   float left


// Bootstrap overrides
body
  font-family sans-font
  background-color #F6F6F6

h2, .h2
  font-family ser-font
  font-weight bold

// Table Styling

.table > thead > tr > th, .table > tbody > tr > th, .table > tfoot > tr > th, .table > thead > tr > td, .table > tbody > tr > td, .table > tfoot > tr > td
  font-weight 500

.table-striped > tbody > tr:nth-child(odd) > td, .table-striped > tbody > tr:nth-child(odd) > th
  background-color transparent

.table-striped > tbody > tr:nth-child(odd) > td, .table-striped > tbody > tr:nth-child(odd) > th
  background-color #D8D8D8

.table-hover > tbody > tr:hover > td, .table-hover > tbody > tr:hover > th
  background #D0021B
  color #FFF

.panel > .list-group .list-group-item:hover
  background #D0021B
  color #FFF

[data-ng-view]
  padding-bottom 50px
  padding-top 50px



.account-info
  float right
  margin 20px 0 10px

  .btn
    margin-left 20px

  .person
    img
      max-width 25px
      max-height 25px

.container.loading
  .hideLoading
    display none

.flex
  display -ms-flexbox
  -ms-box-orient horizontal

  display -webkit-flex
  display -moz-flex
  display -ms-flex
  display flex

  &.center
    -webkit-align-items center
    -moz-align-items center
    -ms-align-items center
    align-items center

.textNode
  text-transform capitalize

.actions
  text-align right
  white-space nowrap

// Exp Edit Pages
.label-primary a.glyphicon
  color white

.bucketForm .input-group .form-control
  width 50px
